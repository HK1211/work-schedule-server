{
  "name": "work-schedule-server",
  "version": "1.0.0",
  "description": "근무 스케쥴링을 위한 서버",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "build": "tsc -p .",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/index.ts",
    "prisma:push": "npx prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:studio": "npx prisma studio",
    "pscale:dev": "pscale connect work-schedule-server",
    "lint": "tsc --noEmit && eslint src/**/*.{js,jsx,ts,tsx} --quiet",
    "lint:fix": "tsc --noEmit && eslint src/**/*.{js,jsx,ts,tsx} --quiet --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "author": "hk1211",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HK1211/work-schedule-server"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
